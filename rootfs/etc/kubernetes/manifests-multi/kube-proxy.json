{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {"name":"k8s-proxy"},
  "spec": {
    "hostNetwork": true,
    "containers": [
      {
        "name": "kube-proxy",
        "image": "gcr.io/google_containers/hyperkube-arm:v1.2.0",
        "imagePullPolicy": "IfNotPresent",
        "command": [
                "/hyperkube",
                "proxy",
                "--master=http://127.0.0.1:8080",
                "--proxy-mode=iptables",
                "--v=2",
                "--resource-container=\"\""
        ],
        "securityContext": {
          "privileged": true
        }
      }
    ]
  }
}
